{
    "name": "era269/micro-object",
    "type": "library",
    "description": "Object <=> Service => MicroService <=> Microobject",
    "keywords": ["OOP","DDD","Event"],
    "license": "MIT",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "era269/normalizable": "^0.2",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "phpstan/phpstan": "^0.12.57"
    },
    "authors": [
        {
            "name": "Yuriy Antonuyk",
            "email": "era269@ukr.net"
        },
        {
            "name": "Dmitriy Ivanov",
            "email": "dmitry.ivanov.zagranju@gmail.com"
        }
    ],
    "config": {
        "platform": {
            "php": "8.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Era269\\Microobject\\": "src",
            "Era269\\Microobject\\Example\\": "example"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Era269\\Microobject\\Tests\\": "tests"
        }
    }
}
